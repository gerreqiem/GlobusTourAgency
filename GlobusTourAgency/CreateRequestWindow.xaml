<Window x:Class="GlobusTourAgency.CreateRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание новой заявки" 
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Создание новой заявки"
                   FontSize="16" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <Label Content="Клиент:" FontWeight="Bold"/>
            <ComboBox x:Name="ClientComboBox" 
                      DisplayMemberPath="FullName"
                      Height="25" 
                      Margin="0,0,0,20"/>

            <Label Content="Тур:" FontWeight="Bold"/>
            <ComboBox x:Name="TourComboBox" 
                      DisplayMemberPath="Name"
                      Height="25" 
                      Margin="0,0,0,20"
                      SelectionChanged="TourComboBox_SelectionChanged"/>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    Padding="10" 
                    Background="#F9F9F9"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="TourInfoText" 
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CreateButton" 
                    Content="Создать" 
                    Click="CreateButton_Click"
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    Background="#4CAF50" 
                    Foreground="White"/>

            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    Background="#F44336" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>