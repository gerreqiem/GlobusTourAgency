<Window x:Class="GlobusTourAgency.RequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление заявками" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1976D2" Padding="10">
            <TextBlock Text="Управление заявками" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="#E3F2FD" Padding="10">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchTextBox" 
                             TextChanged="SearchTextBox_TextChanged" 
                             Margin="5,0,5,0" 
                             Padding="5"
                             Grid.Column="0"/>

                    <ComboBox x:Name="StatusFilterComboBox"
                              SelectionChanged="StatusFilterComboBox_SelectionChanged"
                              Width="150" 
                              Height="25" 
                              Margin="5"
                              Grid.Column="1">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="Новая"/>
                        <ComboBoxItem Content="Подтверждена"/>
                        <ComboBoxItem Content="Отклонена"/>
                        <ComboBoxItem Content="В обработке"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Grid.Column="2">
                        <Button x:Name="SortByDateButton" 
                                Content="Сортировать по дате" 
                                Click="SortByDateButton_Click"
                                Width="150" 
                                Margin="5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <DataGrid x:Name="RequestsDataGrid"
                  Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="RequestsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="150"/>
                <DataGridTextColumn Header="Тур" Binding="{Binding TourName}" Width="250"/>
                <DataGridTextColumn Header="Дата заявки" Binding="{Binding FormattedRequestDate}" Width="120"/>
                <DataGridTemplateColumn Header="Статус" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3" Padding="5,2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Новая">
                                                <Setter Property="Background" Value="#2196F3"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Подтверждена">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Отклонена">
                                                <Setter Property="Background" Value="#F44336"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="В обработке">
                                                <Setter Property="Background" Value="#FF9800"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Background" Value="#757575"/>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Status}" 
                                           HorizontalAlignment="Center"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ViewDetailsButton" 
                        Content="Просмотр деталей" 
                        Click="ViewDetailsButton_Click"
                        Width="120" 
                        Height="30" 
                        Margin="5"
                        Background="#2196F3" 
                        Foreground="White"/>

                <Button x:Name="ConfirmButton" 
                        Content="Подтвердить" 
                        Click="ConfirmButton_Click"
                        Width="100" 
                        Height="30" 
                        Margin="5"
                        Background="#4CAF50" 
                        Foreground="White"/>

                <Button x:Name="RejectButton" 
                        Content="Отклонить" 
                        Click="RejectButton_Click"
                        Width="100" 
                        Height="30" 
                        Margin="5"
                        Background="#F44336" 
                        Foreground="White"/>

                <Button x:Name="CreateRequestButton" 
                        Content="Новая заявка" 
                        Click="CreateRequestButton_Click"
                        Width="120" 
                        Height="30" 
                        Margin="5"
                        Background="#FF9800" 
                        Foreground="White"/>

                <Button x:Name="BackButton" 
                        Content="Назад" 
                        Click="BackButton_Click"
                        Width="80" 
                        Height="30" 
                        Margin="5"
                        Background="#757575" 
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>